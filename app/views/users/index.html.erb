<h1>Bloggers</h1>
<div class="container">
    <% @users.each do |user|%>
       
        <div class="card text-center">
            <div class="card-header">
                 <h5 class="card-title"><%= link_to user.username, user_path(user),class:"text-success"%></h5>
            </div>
            <div class="card-body">
                <%= link_to gravatar_for(user,size:80), user_path(user)%>
                <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                <%= link_to "View profile", user_path(user),class:"btn btn-outline-success"%>
                <%if logged_in? && current_user == user %>
                    <%= link_to "Edit profile", edit_user_path(user),class:"btn btn-outline-primary"%>
                <%end%>
            </div>
            <div class="card-footer text-muted">
               <%= "Joined #{time_ago_in_words(user.created_at)} ago"%>
            </div>
            </div>

    <%end%>
</div>
