<div id="page-content">
    <h1 class = "text-center">Articles listing page</h1>

    <div class="container mt-4">
    <% @articles[1,@articles.length].each do |article|%>
        <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by: Eileen De Guzman
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to article.name, show_article_path(article),class:"text-success"%></h5>
                    <p class="card-text"> <%= truncate(article.body, length:100) %></p>
                    <%= link_to "View", show_article_path(article),class:"btn btn-outline-success"%>
                    <%= link_to "Edit", edit_article_path(article),class:"btn btn-outline-info"%>
                    <%= link_to "Delete", delete_article_path(article),class:"btn btn-outline-danger"%>
        
                </div>
                <div class="card-footer text-muted">
                   <small>Created <%= time_ago_in_words(article.created_at) %>ago, Edited <%= time_ago_in_words(article.updated_at)%> ago</small>
                </div>
                </div>
            </div>
        </div>
        
        
    <% end %>
    </div>

    <button><%= link_to 'Create New Blog',new_article_path %>
    </button>

</div>
